<div class="form-group {% if error != null %}has-error{% endif %}">
    <label class="sr-only" for="">{{ element.getLabel() }}</label>
    <input type="text"
           name="{{ element.getKey() }}"
           {% if element.isDisabled() %}disabled{% endif %}
           value="{{ element.getValue() }}"
           class="form-control"
    >
    {% if error != null %}
        <span class="help-block">{{ error }}</span>
    {% endif %}
</div>